<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/rounded_border"
    android:layout_margin="8dp"
    android:padding="8dp"
    tools:context=".DetailsFragment">

    <!-- ImageView pour afficher l'image du spot -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- LinearLayout pour le texte (nom et localisation) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:layout_marginStart="10dp">

        <!-- TextView pour afficher le nom du spot -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Spot"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- TextView pour afficher la localisation du spot -->
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu du Spot"
            android:textSize="18sp" />

        <!-- TextView pour afficher le niveau de difficulté du spot -->
        <TextView
            android:id="@+id/difficultyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau de difficulté"
            android:textSize="18sp" />

        <!-- TextView pour afficher le type de surbreak du spot -->
        <TextView
            android:id="@+id/surfBreakTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de surf break"
            android:textSize="18sp" />

        <!-- Button pour afficher les détails -->
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voir Détails"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
